<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.matheush.appcalculadora.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#f5f88e">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="C"
            android:id="@+id/btclear"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="clicaBotao"
            android:backgroundTint="@color/btnOperaEspe" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="/"
            android:id="@+id/btdividir"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="clicaBotao"
            android:backgroundTint="@color/btnConta" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="7"
            android:id="@+id/bt7"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="8"
            android:id="@+id/bt8"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="9"
            android:id="@+id/bt9"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="*"
            android:id="@+id/btvezes"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="clicaBotao"
            android:backgroundTint="@color/btnConta" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="4"
            android:id="@+id/bt4"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="5"
            android:id="@+id/bt5"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="6"
            android:id="@+id/bt6"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="-"
            android:id="@+id/btsubtrai"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="clicaBotao"
            android:backgroundTint="@color/btnConta" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="1"
            android:id="@+id/bt1"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="2"
            android:id="@+id/bt2"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="3"
            android:id="@+id/bt3"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="+"
            android:id="@+id/btsoma"
            android:layout_row="3"
            android:layout_column="3"
            android:onClick="clicaBotao"
            android:backgroundTint="@color/btnConta" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="0"
            android:id="@+id/bt0"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="."
            android:id="@+id/btponto"
            android:layout_row="4"
            android:layout_column="2"
            android:onClick="clicaBotao"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="="
            android:id="@+id/btigual"
            android:layout_row="4"
            android:layout_column="3"
            android:onClick="clicaBotao"
            android:backgroundTint="@color/btnOperaEspe" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/tvResultado"
        android:textSize="60dp"
        android:layout_above="@+id/gridLayout"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout"
        android:layout_marginBottom="20dp" />
</RelativeLayout>
